<p id='notice'><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>    
        <td><%=author_name(post)%></td>
        <td><%= post.post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
